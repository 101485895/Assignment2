@model Product

@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}

<h2>Edit @Model.productName</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />
    <input type="hidden" asp-for="productId" value="@Model.productId"/>

    <div class="form-group">
        <label asp-for="productName" class="control-label">Name</label>
        <input asp-for="productName" class="form-control"/>
        <span asp-validation-for="productName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="productDescription" class="control-label">Description</label>
        <textarea asp-for="productDescription" class="form-control"></textarea>
        <span asp-validation-for="productDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="productPrice" class="control-label">Price</label>
        <input asp-for="productPrice" type="number" class="form-control" step="0.01"/>
        <span asp-validation-for="productPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="productQuantity" class="control-label">Quantity</label>
        <input asp-for="productQuantity" type="number" class="form-control"/>
        <span asp-validation-for="productQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="stockThreshold" class="control-label">Threshold</label>
        <input asp-for="stockThreshold" type="number" class="form-control"/>
        <span asp-validation-for="stockThreshold" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Done</button>
        <a asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="btn btn-secondary">Back to Products</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}